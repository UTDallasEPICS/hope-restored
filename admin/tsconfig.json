{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "jsx": "preserve",
    // "baseUrl": "src" // Move this to another place if needed
    "paths": {
      "~/*": [ "./*" ],
      "@/*": [ "./*" ],
      "#app": [ "./.nuxt/types/app" ],
      "#imports": [ "./.nuxt/types/app/imports" ],
      "#components": [ "./.nuxt/types/app/components" ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "vite-env.d.ts"],
  "exclude": ["node_modules"]
}
